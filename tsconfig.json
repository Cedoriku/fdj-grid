{
  "compilerOptions": {
    "baseUrl": "src",
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "target": "esnext",
    "allowJs": true,
    "module": "commonjs",
    "jsx": "react-jsx",
    "include": ["src", "src/**/*", "tests/**/*"],
    "exclude": [
      "node_modules"
    ],
    "typeRoots": [
      "../node_modules/@types",
      "../@types"
    ],
    "types": [
      "reflect-metadata",
      "@types/jest",
      "node"
    ],
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
  }
}
